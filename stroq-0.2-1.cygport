inherit qt3

DESCRIPTION="Qt Polarium game"
HOMEPAGE="http://stroq.sourceforge.net/"
SRC_URI="mirror://sourceforge/${PN}/${P}.tar.bz2"

DIFF_EXCLUDES="${PN}.pro"

src_compile() {
	cd ${S}
	${QT3_QMAKE} -project
	mv ${P}.pro ${PN}.pro
	lndirs

	cd ${B}
	cygqmake3
	cygmake
}

src_install() {
	cd ${B}
	dobin ${PN}.exe
}
